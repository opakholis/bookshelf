{
  "name": "bookshelf",
  "description": "My personal bookshelf.",
  "version": "0.0.1",
  "private": true,
  "author": {
    "name": "Opa Kholis Majid",
    "email": "opakholis.id@gmail.com",
    "url": "https://opakholis.dev"
  },
  "license": "SEE LICENSE IN LICENSE",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/opxop/bookshelf.git"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "postbuild": "next-sitemap",
    "start": "next start",
    "lint": "next lint",
    "prepare": "husky install",
    "format": "prettier --write \"./**/*.{js,jsx}\""
  },
  "dependencies": {
    "@headlessui/react": "^1.4.1",
    "@notionhq/client": "^0.3.2",
    "next": "^11.1.3",
    "next-themes": "^0.0.15",
    "nextjs-progressbar": "^0.0.11",
    "phosphor-react": "^1.3.1",
    "preact": "^10.5.14",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-notion": "^0.10.0",
    "slugify": "^1.6.0",
    "timeago-react": "^3.0.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "autoprefixer": "^10.3.2",
    "eslint": "^7.32.0",
    "eslint-config-next": "^11.1.2",
    "husky": "^7.0.0",
    "lint-staged": "^11.1.2",
    "next-sitemap": "^1.6.164",
    "postcss": "^8.3.6",
    "prettier": "^2.3.2",
    "prettier-plugin-tailwind": "^2.2.12",
    "tailwindcss": "^2.2.7"
  },
  "prettier": {
    "arrowParens": "always",
    "printWidth": 100,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "none"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,yml,yaml}": [
      "eslint --cache --fix"
    ],
    "*.{js,jsx,ts,tsx,css,md}": "prettier --write"
  }
}
